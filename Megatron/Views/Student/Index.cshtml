@model Megatron.Models.Article

@{
    ViewData["Title"] = "Article";
    Layout = "_Authenticated_Layout";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Dashboard</span>
        <h3 class="page-title">Article Overview</h3>
    </div>
    <div class="col-12 mt-3">
        <a asp-controller="Student" asp-action="SubmitArticle" class="btn btn-primary">
            Create New Article
        </a>
    </div>
</div>
<table id="studentArticleTable" class="table table-bordered table-hover" style="width:100%">
    <thead class="thead-light">
    </thead>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#studentArticleTable').DataTable({
                info: false,
                ajax: {
                    url: '/Student/GetPersonalArticles',
                    dataSrc: ''
                },
                rowId: "id",
                columns: [
                    { data: 'title', title: 'Title' },
                    { data: 'faculty.facultyName' , title: 'Faculty'  },
                    {
                        data: 'status', title: 'Status', render: function (data) {
                            if (data == false) {
                                return '<div class="spinner-border text-warning" role="status"></div ><span style="color:#ffb400">&nbsp;&nbsp;Pending</span>';
                            } else {
                                return '<i class="fa fa-check-circle fa-2x" aria-hidden="true" style="color:green"></i>';
                            }
                        }
                    },
                    {data: 'createAt', title: 'Create At', render: function (data){
                        return moment(data).format("HH:mm - DD/MM/YYYY");
                    }},
                    {
                        data: 'updateAt', title: 'Update At', render: function (data) {
                            return moment(data).format("HH:mm - DD/MM/YYYY");
                        }
                    },
                    {
                                            data: 'id',
                                            className: "center",
                                            title: 'Actions',
                                            render: function (data) {
                                                return '<a href="Student/EditArticle/' + data + '" class="btn btn-success mr-1"> Edit </a>';
                                            }
                    
                                        }
                ],
                order: [1, 'asc']
            });
        $('#studentArticleTable tbody').on( 'click', 'tr', function () {
            const articleId = $(this).closest('tr').attr('id');
            window.location.href = '/Article/Details/' + articleId;
        });
    });
    </script>
}