@using Microsoft.AspNetCore.Routing
@model IEnumerable<Megatron.Models.Article>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<input id="facultyId" type="hidden" value="@Context.GetRouteData().Values["id"]">
<div class="container p-3">
    <table class="table table-striped table-bordered dt-responsive nowrap table-hover" id="ArticleTable">
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const facultyId = document.getElementById("facultyId").value;
            $('#ArticleTable').DataTable({
                processing: true,
                ajax: {
                    url: '/Article/GetListArticles/' + facultyId,
                    dataSrc: ''
                },
                columns: [
                    { data: "title", title: "Title" },
                    { data: "updateAt", title: "Update At" },
                ],
                order: [1, 'asc']
            });

        });
    </script>
}
