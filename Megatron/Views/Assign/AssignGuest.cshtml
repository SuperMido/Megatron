@model Megatron.ViewModels.UserFacultyViewModel

@{
    ViewBag.Title = "Assign Guest";
    Layout = "_Authenticated_Layout";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Dashboard</span>
        <h3 class="page-title">Assign Guest to Faculty</h3>
    </div>
</div>
<div class="container-fluid">
    <partial name="_StatusMessage" model="@ViewData["Message"]"/>
    <div class="card shadow col-xl-6">
        <div class="card-body">
            <form method="post" asp-action="AssignGuest">
                <div class="backgroundWhite shadowNew">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-4 col-lg-2 col-md-2 col-sm-2 p-0">
                            <label asp-for="UserFaculty.UserId" class="col-form-label"></label>
                        </div>
                        <div class="col-8 col-lg-10 col-md-10 col-sm-10 p-0">
                            <select asp-for="@Model.UserFaculty.UserId" id="UserId" asp-items="Model.User.Select(u => new SelectListItem() {Text = u.FullName.ToString(), Value = u.Id})" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 col-lg-2 col-md-2 col-sm-2 p-0">
                            <label asp-for="UserFaculty.FacultyId" class="col-form-label"></label>
                        </div>
                        <div class="col-8 col-lg-10 col-md-10 col-sm-10 p-0">
                            <select asp-for="@Model.UserFaculty.FacultyId" id="FacultyId" asp-items="Model.Faculty.Select(f => new SelectListItem() {Text = f.FacultyName.ToString(), Value = f.Id.ToString()})" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xl-12   ">
                            <partial name="_AssignAndBackToListButton"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>