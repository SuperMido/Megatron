@model Megatron.Models.Semester

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Edit</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SemesterName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SemesterName" class="form-control" />
                        <span asp-validation-for="SemesterName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SemesterStartDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SemesterStartDate" class="form-control" />
                        <span asp-validation-for="SemesterStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SemesterEndDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SemesterEndDate" class="form-control" />
                        <span asp-validation-for="SemesterEndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Submit" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-100"> Back</a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 