@model Megatron.ViewModels.SemesterViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Authenticated_Layout";
}
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Dashboard</span>
        <h3 class="page-title">Edit Article</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-9 col-md-12">
        <div class="card card-small mb-3">
            <div class="card-body">
                <form method="post" id="SubmitForm">
                    <partial name="_StatusMessage" model="@ViewData["Message"]"/>
                    <input asp-for="@Model.Semester.Id" hidden/>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label asp-for="@Model.Semester.SemesterName" class="col-form-label"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="@Model.Semester.SemesterName" class="form-control"/>
                            <span asp-validation-for="@Model.Semester.SemesterName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label asp-for="@Model.Semester.SemesterStartDate"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="@Model.Semester.SemesterStartDate" class="form-control"/>
                            <span asp-validation-for="@Model.Semester.SemesterStartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label asp-for="@Model.Semester.SemesterClosureDate"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="@Model.Semester.SemesterClosureDate" class="form-control"/>
                            <span asp-validation-for="@Model.Semester.SemesterClosureDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <label asp-for="@Model.Semester.SemesterEndDate"></label>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="@Model.Semester.SemesterEndDate" class="form-control"/>
                            <span asp-validation-for="@Model.Semester.SemesterEndDate" class="text-danger"></span>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-md-9 col-lg-8"></div>
                    <div class="col-md-3 col-lg-4">
                        <input type="submit" form="SubmitForm" class="btn w-100 btn-accent" value="Create"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
} 