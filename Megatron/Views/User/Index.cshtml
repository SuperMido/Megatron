@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model System.Collections.Generic.IEnumerable<Megatron.ViewModels.UserRoleViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Authenticated_Layout";
}

<div class="container p-3">
    <table class="table table-striped table-bordered dt-responsive nowrap table-hover" id="UserTable">
        <thead class="thead-light"></thead>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const userTable = $('#UserTable').DataTable({
                processing: true,
                fixedHeader: true,
                ajax: {
                    url: '/User/GetUsers',
                    dataSrc: ''
                },
                rowId: "id",
                columns: [
                    { data: "fullName", title: "Full Name" },
                    { data: "email", title: "Email" },
                    { data: "role", title: "Role"},
                    { data: "dateCreate", title: "Date Create"}
                ],
                order: [2, 'asc']
            });
        });
    </script>
}